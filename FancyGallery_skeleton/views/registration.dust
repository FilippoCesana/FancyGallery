    <div class="container">
      <div clas="jumbotron">
    <div class="container_form_big">
      <h1>SIGN UP</h1>
      <form method="POST" action="">
        <div class="container_form">
          <div class="description">NAME, SURNAME:</div>
          <div class="input_field">
            <input type="text" name="nameSurname" id="nameSurname" placeholder="NAME, SURNAME" required/>
          </div>
        </div>

        <hr />

        <div class="container_form">
          <div class="description">USERNAME:</div>
          <div class="input_field">
            <input type="text" name="username" id="username" placeholder="USERNAME" required/>
          </div>
        </div>

        <hr />

        <div class="container_form">
          <div class="description">E-MAIL:</div>
          <div class="input_field">
            <input type="email" id="email" placeholder="ENTER YOUR E-MAIL" required/>
          </div>
        </div>

        <hr/>

        <div class="container_form">
          <div class="description">PASSWORD (8 characters minimum):</div>
          <div class="input_field">
            <input type="password" name="password" id="password" minlength="8" required/>
          </div>
        </div>

        <div class="container_form">
          <div class="description">
            CONFIRM PASSWORD (8 characters minimum):
          </div>
          <div class="input_field">
            <input type="password" name="confirm_password" id="confirm_password" minlength="8" required/>
          </div>
        </div>

        <div class="container_form" id="message"></div>

        <hr/>

