<div class="container_form_big">
	<h1>UPLOAD A PICTURE</h1>
  <form method="" action="">
		<div class="container_form">
			<div class="description">UPLOAD A PICTURE TO:</div>
			<div class="input_field">{event_name}</div>
		</div>

		<hr>

		<div class="container_form">
			<div class="description">PHOTOGRAPHER:</div>
			<div class="input_field">{photographer}</div>
		</div>

		<hr>

		<div class="container_form">
        <div class="description">UPLOAD SINGLE IMAGE:</div>
        <div class="input_field"><input type="file" name="ImageToUpload"></div>
    </div>

		<hr>

		<div class="container_form">
        <div class="description">TAKE PICTURE:</div>
        <div class="input_field"><button type="button">CLICK!</button></div>
    </div>

		<hr>

		<div class="container_form">
        <div class="description">PREVIEW:</div>
        <div class="input_field"><canvas> </canvas></div>
    </div>

		<hr>

		<br>

		<input id="button" type="submit" name="new" value="OK" />

	</form>
</div>
